<div class="container pt-3">
	<div class="row justify-content-sm-center" >
		<div class="col-10">
			<div class="card border-info">
				<div class="card-header text-center">Hello to currency converter !</div>
				<div class="card-body">
					<div class="col">
						<div class="row">
							<div class="col-6 d-flex justify-content-center">
								<div onclick="go_to('/currency/convert')" class="card border-secondary mb-3 card-option" style="max-width: 18rem;background-color: #6c757d52!important">
									<div class="card-body">
										<img width="100%" src="images/currency.svg" alt="currency_image">
										<h3 class="text-center">Currency exchange</h3>
									</div>
								</div>
							</div>
							<div class="col-6 d-flex justify-content-center">
								<div onclick="go_to('/currency/history')" class="card border-secondary mb-3 card-option" style="max-width: 18rem;background-color: #6c757d52!important">
									<div class="card-body">
										<img width="100%" src="images/clipboards.svg" alt="currency_image">
										<h3 class="text-center">Conversion history</h3>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

<script type="application/javascript">
	function go_to (url){
		window.location = url;
	}
</script>

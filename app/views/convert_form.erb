<div class="row" id="wrapper">
  <div class="col">
    <form class="form">
      <div class="row">
        <div class="col-md-4">
          <div class="form-group">
            <label for="select_from"> From:</label>
            <select id="select_from" class="form-control" v-model="currency_convert.from" placeholder="Choose currency">
              <option v-for="option in options.from_options" :value="option.value">
                {{option.text}}
              </option>
            </select>
          </div>
        </div>
        <div class="col-md-2">
          <div class="form-group">

            <a  @click="switch_currency()" class="btn btn-primary" style="margin-top: 20%; margin-left: 30%">switch</a>
          </div>
        </div>
        <div class="col-md-4">
          <div class="form-group">
            <label for="select_to"> To:</label>
            <select id="select_to" class="form-control" v-model="currency_convert.to" placeholder="Choose currency">
              <option v-for="option in options.to_options" :value="option.value">
                {{option.text}}
              </option>
            </select>
          </div>
        </div>

      </div>
      <div class="row">



        <div class="col-md-4">
          <div class="form-group">
            <label for="from_input">Value :</label>
            <input class="form-control" v-model="currency_convert.value" type="number" id="from_input"/>
          </div>
        </div>
        <div class="col-md-2">
          <div class="form-group">

            <button class="btn btn-primary" style="margin-top: 20%; margin-left: 30%">Convert</button>
          </div>
        </div>
        <div class="col-md-4">
          <div class="form-group">
            <label for="result_input">Result :</label>
            <input class="form-control" v-model="currency_convert.result" type="number" disabled id="result_input"/>
          </div>
        </div>
      </div>
    </form>
  </div>
</div>

<script>
  var vm = new Vue({
      el : "#wrapper",
      data : function (){
          return {
              options : {
                  all_options : [
                      {
                          value : "EUR",
                          text : "EUR"
                      },
                      {
                          value : "USD",
                          text : "USD"
                      },
                      {
                          value : "CHF",
                          text : "CHF"
                      }
                  ],
                  from_options : [],
                  to_options : []
              },
              currency_convert : {
                  "from" : null,
                  "to" : null,
                  "result" : 0,
                  "value" : 0
              }
          }
      },
      methods : {
        change_handler : function (){
            // get only options that should be displayed

        },
        switch_currency : function (){
          const intermediate = this.currency_convert.to;
          this.currency_convert.to = this.currency_convert.from;
          this.currency_convert.from =    intermediate;
        }
      },
      beforeMount : function (){
        this.options.from_options = this.options.all_options;
        this.options.to_options = this.options.all_options;
      },
      mounted : function (){
          console.log("Loaded !")
      }
  })
</script>